#include <string.h>
#include <stdio.h>
int main(){
    char frase[100];
    int qntd=0, i;

    printf("\nDigite uma frase: ");
    fgets(frase,100,stdin);
    for (i=0; frase[i]!='\0'; i++)
    {
        if (frase[i]=='A' || frase[i]=='a')
        {
            
            qntd++;
        }
    }
    printf("\nTotal de 'A' ou 'a': %d",qntd);
    
    return 0;
}
